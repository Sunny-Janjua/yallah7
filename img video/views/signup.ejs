<!-- views/signup.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Signup</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100">
    <div class="flex justify-center items-center min-h-screen">
        <form 
            action="/signup" 
            method="POST" 
            enctype="multipart/form-data" 
            class="bg-white p-8 rounded-lg shadow-md w-full max-w-md">
            <h2 class="text-2xl font-semibold text-center mb-6">Signup Form</h2>
            <div class="mb-4">
                <label for="username" class="block text-gray-700">Username:</label>
                <input 
                    type="text" 
                    id="username" 
                    name="username" 
                    class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring focus:border-blue-300" 
                    required 
                    placeholder="Enter your username">
            </div>

            <!-- Email Field -->
            <div class="mb-4">
                <label for="email" class="block text-gray-700">Email:</label>
                <input 
                    type="email" 
                    id="email" 
                    name="email" 
                    class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring focus:border-blue-300" 
                    required 
                    placeholder="Enter your email">
            </div>
            <div class="mb-4">
                <label for="password" class="block text-gray-700">Password:</label>
                <input 
                    type="password" 
                    id="password" 
                    name="password" 
                    class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring focus:border-blue-300" 
                    placeholder="Enter your password (optional)">
            </div>

            <!-- Image Upload Field -->
            <div class="mb-4">
                <label for="img" class="block text-gray-700">Upload Image:</label>
                <input 
                    type="file" 
                    id="img" 
                    name="img" 
                    accept="image/*"
                    class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring focus:border-blue-300" 
                    required 
                >
            </div>

            <!-- Checkbox Field -->
            <div class="mb-4 flex items-center">
                <input 
                    type="checkbox" 
                    id="ischeck" 
                    name="ischeck" 
                    class="w-4 h-4 text-blue-600 border-gray-300 rounded focus:ring focus:ring-blue-200" 
                    required>
                <label for="ischeck" class="ml-2 text-gray-700">Agree to terms and conditions</label>
            </div>

            <!-- Submit Button -->
            <div class="text-center">
                <button 
                    type="submit" 
                    class="w-full bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 px-4 rounded-lg focus:outline-none focus:ring focus:ring-blue-300">
                    Submit
                </button>
            </div>
        </form>
    </div>
</body>
</html>
